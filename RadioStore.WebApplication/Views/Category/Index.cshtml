@model int?

@{
    ViewBag.Title = "Categories";
}


<div>
    <h2>Categories</h2>
    <div>
        @{ Html.RenderAction("GetParrentsCategoryLinks", "Category", new { CategoryId = Model }); }
    </div>
    <div id="categoryList">
        @{ Html.RenderAction("GetChildCategoryList", "Category", new { CategoryId = Model }); }
    </div> 
    @if (Request.IsAuthenticated && User.IsInRole("admin"))
    {
        <div>
            @Html.ActionLink("New Category", "EditCategory", null, null)
        </div>
    }
</div>