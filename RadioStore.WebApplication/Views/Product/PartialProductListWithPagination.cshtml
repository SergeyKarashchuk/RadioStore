@model RadioStore.WebApplication.Models.ProductDTOViewModel


<div id="productPartialView">
    @Html.Partial("PartialProductList", Model)
    @{ int? catId = Model.CategoryId; }
</div>

<nav>
    <ul class="pagination">
        @for (int i = 0; i < Model.PageCount; i++)
        {
            <li class="page-item">
                @Ajax.ActionLink($"{@i + 1}", "PartialProductList",
                            new { CategoryId = catId, pageId = i + 1 },
                            new AjaxOptions { UpdateTargetId = "productPartialView" },
                            new { @class = "page-link" })
            </li>
        }
    </ul>
</nav>

