@using RadioStore.WebApplication.Models

@model SpecificationTypeDTOViewModel

@{
    ViewBag.Title = "Index";
}


<div id="specificationTypePartialView">
    @Html.Partial("PartialSpecificationTypesList", Model)
</div>

<div>
    <div>
        <nav>
            <ul class="pagination">
                @if (Model.PageCount > 1)
                {
                    for (int i = 0; i < Model.PageCount; i++)
                    {
                        <li class="page-item">
                            @Ajax.ActionLink($"{@i + 1}", "PartialSpecificationTypesList",
                                             new { pageId = i + 1 },
                                             new AjaxOptions { UpdateTargetId = "specificationTypePartialView" },
                                             new { @class = "page-link" })
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
    <div>
        @Html.ActionLink("New Specification", "EditSpecificationType", null, new { @class = "btn btn-primary" })
    </div>
</div>